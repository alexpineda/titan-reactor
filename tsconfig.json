{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "noImplicitOverride": true,
        "allowJs": true,
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx",

        "strict": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "isolatedModules": false,
        "strictPropertyInitialization": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "noErrorTruncation": true,
        "noUncheckedIndexedAccess": false,

        "declaration": true,
        "declarationDir": "./dist/types",

        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "inlineSources": true,
        "sourceMap": true,
        "removeComments": false,

        "baseUrl": "src",
        "paths": {
            "common/*": ["common/*"],
            "@image/*": ["image/*"],
            "@image": ["image/index.ts"],
            "@core/*": ["core/*"],
            "@core": ["core/index.ts"],
            "@stores/*": ["stores/*"],
            "@stores": ["stores/index.ts"],
            "@utils/*": ["utils/*"],
            "@ipc/*": ["ipc/*"],
            "@ipc": ["ipc/index.ts"],
            "@plugins/*": ["plugins/*"],
            "@plugins": ["plugins/index.ts"],
            "@process-replay/*": ["process-replay/*"],
            "@openbw/*": ["openbw/*"],
            "@openbw": ["openbw/index.ts"],
            "@audio/*": ["audio/*"],
            "@audio": ["audio/index.ts"],
            "@render/*": ["render/*"],
            "@render": ["render/index.ts"],
            "@input/*": ["input/*"],
            "@input": ["input/index.ts"],
            "@macros/*": ["macros/*"],
            "@macros": ["macros/index.ts"]
        },
        "typeRoots": ["./src/common/types/declarations", "./node_modules/@types"],

        "outDir": "generated",
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "./node_modules/**/*",
        "./generated/**/*",
        "./dist/**/*",
        "./release/**/*",
        "./bundled/**/*",
        "./build/**/*"
    ]
}
